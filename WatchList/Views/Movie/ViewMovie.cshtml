@{
    @await Html.PartialAsync("_Navbar")
}


@model Movie

<div>
    <h1>Movie Details</h1>
    
    <h4>@Model.Title</h4>
    <br>
    <h6>Genre: @Model.Genre</h6>
    <h6>ReleaseDate: @Model.ReleaseDate.Value.ToString("MMM d yyy")</h6>
    <h6>Synopsis: @Model.Synopsis</h6>
    
    <h6>Rating</h6>
</div> 
    <form asp-route-movieId ="@Model.MovieId" asp-action="Delete" asp-controller="Movie" method="post">
                    <button type="submit" class="btn btn-primary">Delete</button>  
    </form> 

    <a asp-route-movieId ="@Model.MovieId" asp-action="Edit" asp-controller="Movie" type="btn-btn-primary"method="post">Edit</a> 
