@{
    @await Html.PartialAsync("_Navbar")
}

<h1>Add a new device</h1>

@model Device

<div class="card w-50 form-control text-left justtify-content-center m-3">
    <form asp-action="CreateDevice" asp-controller="Device" method="post">
        <div class="mb-3 form-label">
            <label asp-for="SerialNumber" class="form-label">Computer Serial#</label>
            <input asp-for="SerialNumber" class="form-control">
            <span asp-validation-for="SerialNumber" class="text-danger"></span>
        </div>
        <div class="mb-3 form-label">
            <label asp-for="HostName" class="form-label">Computer Host Name</label>
            <input asp-for="HostName" class="form-control">
            <span asp-validation-for="HostName" class="text-danger"></span>
        </div>
        <div class="mb-3 form-label">
            <label asp-for="Badge" class="form-label">Employee Badge#</label>
            <input asp-for="Badge" class="form-control">
            <span asp-validation-for="Badge" class="text-danger"></span>
        </div>
        <div class="mb-3 form-label">
            <label asp-for="EmployeeName" class="form-label">Employee Name</label>
            <input asp-for="EmployeeName" class="form-control">
            <span asp-validation-for="EmployeeName" class="text-danger"></span>
        </div>
        <div class="mb-3 form-label">
            <label asp-for="Status" class="form-label">Status</label>
            <input asp-for="Status" class="form-control">
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="mb-3">
        <input type="submit" value="Add Device" class="btn btn-primary">
    </div>
    </form>